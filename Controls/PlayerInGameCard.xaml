<UserControl x:Class="CatanClient.Controls.PlayerInGameCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CatanClient.Controls"
             mc:Ignorable="d" Height="83" Width="220">


    <Grid Background="{StaticResource SecondaryColor}" Margin="0,0,0,0" Height="180" VerticalAlignment="Center" >
        <Image HorizontalAlignment="Left" Height="52" Margin="10,62,0,0" VerticalAlignment="Top" Width="47" Source="{Binding ImageSource}"/>
        <TextBlock
        Margin="61,83,10,71"
        Text="{Binding Points}"
        Style="{StaticResource ResourceKey=PrimaryTextBlockStyle}"
        Foreground="White"
        FontSize="12"
        />
        <TextBlock
        Margin="10,118,10,52"
        Text="{Binding PlayerName}"
        Style="{StaticResource ResourceKey=PrimaryTextBlockStyle}"
        Foreground="White"
        FontSize="7"
        />

    </Grid>
</UserControl>
