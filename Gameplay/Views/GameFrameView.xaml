<UserControl x:Class="CatanClient.Gameplay.Views.GameFrameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CatanClient.Gameplay.Views"
             mc:Ignorable="d" 
             d:DesignHeight="1000" d:DesignWidth="1700">

    <Viewbox Margin="0,0,0,0" Stretch="Fill">
        <Grid Width="1600" Height="900">
            <Grid.RowDefinitions>
                <RowDefinition Height="98"/>
                <RowDefinition Height="2"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="863*"/>
                <ColumnDefinition Width="236*"/>
                <ColumnDefinition Width="301*"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Row="0" Background="{StaticResource SecondaryColor}" Margin="124,0,142,0" Grid.RowSpan="2" Grid.Column="1" Grid.ColumnSpan="3"/>
            <Border Grid.Row="2" Background="{StaticResource SecondaryColor}" Margin="124,596,142,0" Grid.RowSpan="2" Grid.Column="1" Grid.ColumnSpan="3"/>
            <Border Grid.Column="0" Background="{StaticResource SecondaryColor}" Grid.ColumnSpan="2" Margin="0,0,739,0" Grid.RowSpan="4" Height="911" VerticalAlignment="Top"/>
            <Border Grid.Column="3" Background="{StaticResource SecondaryColor}" Grid.ColumnSpan="2" Margin="159,0,0,0" Grid.RowSpan="4"/>


            <TextBlock Grid.Column="1" Margin="227,0,0,0" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="White"><Run Language="es-mx" Text="Puntos:"/></TextBlock>

            <Button Content="Salir" Margin="31,68,0,0" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="50" Grid.RowSpan="3" Width="145"/>
            <Button Content="Votar expulsión" Margin="31,59,0,0" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="50" Width="145" Grid.Row="2"/>

            <TextBlock Grid.Row="3" Grid.Column="1" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Bottom" Foreground="White" Margin="188,0,0,26"><Run Language="es-mx" Text="Recurso 1"/></TextBlock>
            <ListBox Grid.Column="3" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="175,0,16,428" Grid.ColumnSpan="2" Grid.RowSpan="2" Grid.Row="1"/>
            <TextBlock Grid.Column="3" Margin="227,48,0,0" FontSize="20" VerticalAlignment="Top" Foreground="White" HorizontalAlignment="Left" Width="106" Height="27" Grid.ColumnSpan="2"><Run Language="es-mx" Text="Jugadores"/><LineBreak/><Run Language="es-mx"/></TextBlock>
            <ListBox Grid.Column="3" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="175,339,16,60" Grid.ColumnSpan="2" Grid.Row="2"/>
            <TextBox TextWrapping="Wrap" Text="TextBox" Margin="175,660,16,0" Grid.ColumnSpan="2" Grid.Row="2" Grid.Column="3"/>
            <TextBlock Grid.Column="3" Margin="211,297,0,0" FontSize="20" VerticalAlignment="Top" Foreground="White" HorizontalAlignment="Left" Width="106" Height="27" Grid.ColumnSpan="2" Grid.Row="2"><Run Text="Chat"/><Run Language="es-mx" Text=":"/></TextBlock>
            <Button Content="Enviar mensaje" Margin="211,18,0,0" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="32" Width="146" Grid.Row="3" Grid.Column="3"/>
            <TextBlock Grid.Row="3" Grid.Column="1" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Bottom" Foreground="White" Margin="322,0,0,26"><Run Text="Recurso "/><Run Language="es-mx" Text="2"/></TextBlock>
            <TextBlock Grid.Row="3" Grid.Column="1" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Bottom" Foreground="White" Margin="439,0,0,26"><Run Text="Recurso "/><Run Language="es-mx" Text="3"/></TextBlock>
            <TextBlock Grid.Row="3" Grid.Column="1" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Bottom" Foreground="White" Margin="550,0,0,26"><Run Text="Recurso "/><Run Language="es-mx" Text="4"/></TextBlock>
            <TextBlock Grid.Row="3" Grid.Column="1" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Bottom" Foreground="White" Margin="661,0,0,26"><Run Text="Recurso "/><Run Language="es-mx" Text="5"/></TextBlock>
            <TextBlock Grid.Row="2" Grid.Column="2" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Bottom" Foreground="White" Margin="88,0,0,55" RenderTransformOrigin="-0.051,0.275"><Run Text="Construir"/><Run Language="es-mx" Text=":"/></TextBlock>
            <Button Content="Poblado" Margin="812,693,0,0" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Top" Height="32" Width="123" Grid.Row="2" Grid.Column="1" Grid.RowSpan="2" Grid.ColumnSpan="2"/>
            <Button Content="Carretera" Margin="103,693,0,0" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Top" Height="32" Width="123" Grid.Row="2" Grid.Column="2" Grid.RowSpan="2"/>
            <Button Content="Ciudad" Margin="10,693,0,0" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Top" Height="32" Width="123" Grid.Row="2" Grid.Column="3" Grid.RowSpan="2"/>
            <Button Content="Tirar dados" Margin="32,576,0,0" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="122" Width="144" Grid.Row="2"/>
            <Button Content="Continuar" Margin="32,0,0,0" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.ColumnSpan="2" Height="50" Width="145" Grid.Row="3"/>
            <Button Content="Intercambiar" Margin="32,504,0,0" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="50" Width="144" Grid.Row="2"/>
            <Rectangle HorizontalAlignment="Left" Height="328" Margin="18,146,0,0" Grid.Row="2" Stroke="Black" VerticalAlignment="Top" Width="188" Grid.ColumnSpan="2"/>
        </Grid>
    </Viewbox>
</UserControl>