<UserControl x:Class="CatanClient.Gameplay.Views.GameFrameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CatanClient.Gameplay.Views"
             mc:Ignorable="d" 
             d:DesignHeight="1000" d:DesignWidth="1700">

    <Viewbox Margin="0,0,0,0" Stretch="Fill">
        <Grid Width="1600" Height="900">
            <Grid.RowDefinitions>
                <RowDefinition Height="98"/>
                <RowDefinition Height="2"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="773*"/>
                <ColumnDefinition Width="90*"/>
                <ColumnDefinition Width="236*"/>
                <ColumnDefinition Width="301*"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Row="0" Background="{StaticResource SecondaryColor}" Margin="124,0,142,0" Grid.RowSpan="2" Grid.Column="1" Grid.ColumnSpan="4"/>
            <Border Grid.Row="2" Background="{StaticResource SecondaryColor}" Margin="124,596,142,0" Grid.RowSpan="2" Grid.Column="1" Grid.ColumnSpan="4"/>
            <Border Grid.Column="0" Background="{StaticResource SecondaryColor}" Grid.ColumnSpan="2" Margin="0,0,649,0" Grid.RowSpan="4" Height="911" VerticalAlignment="Top"/>
            <Border Grid.Column="4" Background="{StaticResource SecondaryColor}" Grid.ColumnSpan="2" Margin="159,0,0,0" Grid.RowSpan="4"/>


            <TextBlock Grid.Column="1" Margin="227,0,0,0" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="White"><Run Language="es-mx" Text="Puntos:"/></TextBlock>

            <Button Style ="{StaticResource NeonButtonStyle}"  Content="Salir" Margin="26,0,0,0" FontSize="11" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.ColumnSpan="2" Height="50" Width="116"/>
            <Button Style="{StaticResource NeonButtonStyle}" Content="Votar expulsión" Margin="22,8,0,0" FontSize="9" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="60" Width="180" Grid.Row="2"/>

            <TextBlock FontFamily="{StaticResource PrimaryFontFamily}" Grid.Row="3" Grid.Column="1" FontSize="10" HorizontalAlignment="Left" VerticalAlignment="Bottom" Foreground="White" Margin="115,0,0,26" Text="Piedra lunar"/>
            <ListBox Grid.Column="4" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="175,0,16,428" Grid.ColumnSpan="2" Grid.RowSpan="2" Grid.Row="1"/>
            <TextBlock Grid.Column="4" Margin="227,48,0,0" FontSize="20" VerticalAlignment="Top" Foreground="White" HorizontalAlignment="Left" Width="106" Height="27" Grid.ColumnSpan="2"><Run Language="es-mx" Text="Jugadores"/><LineBreak/><Run Language="es-mx"/></TextBlock>
            <ListBox Grid.Column="4" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="175,339,16,60" Grid.ColumnSpan="2" Grid.Row="2"/>
            <TextBox TextWrapping="Wrap" Text="TextBox" Margin="175,660,16,0" Grid.ColumnSpan="2" Grid.Row="2" Grid.Column="4"/>
            <TextBlock FontFamily="{StaticResource PrimaryFontFamily}" Grid.Column="4" Margin="211,297,0,0" FontSize="18" VerticalAlignment="Top" Foreground="White" HorizontalAlignment="Left" Width="106" Height="27" Grid.ColumnSpan="2" Grid.Row="2"><Run Text="Chat"/><Run Language="es-mx" Text=":"/></TextBlock>
            <Button Style="{StaticResource NeonButtonStyle}" Content="Enviar mensaje" Margin="211,12,0,0" FontSize="7" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="45" Width="140" Grid.Row="3" Grid.Column="4"/>
            <TextBlock FontFamily="{StaticResource PrimaryFontFamily}" Grid.Row="3" Grid.Column="1" FontSize="10" HorizontalAlignment="Left" VerticalAlignment="Bottom" Foreground="White" Margin="257,0,0,26"><Run Text="Tritónium"/></TextBlock>
            <TextBlock FontFamily="{StaticResource PrimaryFontFamily}" Grid.Row="3" Grid.Column="1" FontSize="10" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White" Margin="363,64,0,0"><Run Text="Nanofibras Alpha"/></TextBlock>
            <TextBlock FontFamily="{StaticResource PrimaryFontFamily}" Grid.Row="3" Grid.Column="1" FontSize="10" HorizontalAlignment="Left" VerticalAlignment="Bottom" Foreground="White" Margin="531,0,0,26"><Run Text="Biomasa Épsilon"/></TextBlock>
            <TextBlock FontFamily="{StaticResource PrimaryFontFamily}" Grid.Row="3" Grid.Column="1" FontSize="10" HorizontalAlignment="Left" VerticalAlignment="Bottom" Foreground="White" Margin="703,0,0,26"><Run Text="GRX-810"/></TextBlock>
            <TextBlock FontFamily="{StaticResource PrimaryFontFamily}" Grid.Row="2" Grid.Column="1" FontSize="11" HorizontalAlignment="Left" VerticalAlignment="Bottom" Foreground="White" Margin="167,0,0,67"><Run Language="es-mx" Text="x0"/></TextBlock>
            <Image Source="pack://application:,,,/Gameplay/Resources/Images/GameResources/LunarStone.png" Margin="132,639,553,43" Grid.Column="1" Grid.Row="2" Grid.RowSpan="2"/>
            <Image Source="pack://application:,,,/Gameplay/Resources/Images/GameResources/TritoniumWood.png" Margin="269,641,427,45" Grid.Column="1" Grid.Row="2" Grid.RowSpan="2"/>
            <Image Source="pack://application:,,,/Gameplay/Resources/Images/GameResources/AlphaNanofibers.png" Margin="399,641,297,45" Grid.Column="1" Grid.Row="2" Grid.RowSpan="2"/>
            <Image Source="pack://application:,,,/Gameplay/Resources/Images/GameResources/EpsilonGrain.png" Margin="573,642,124,44" Grid.Column="1" Grid.Row="2" Grid.RowSpan="2"/>
            <Image Source="pack://application:,,,/Gameplay/Resources/Images/GameResources/GRX-810Stone.png" Margin="700,648,86,44" Grid.Column="1" Grid.Row="2" Grid.RowSpan="2" Grid.ColumnSpan="2"/>
            <TextBlock Grid.Row="2" Grid.Column="3" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Bottom" Foreground="White" Margin="88,0,0,67" RenderTransformOrigin="-0.051,0.275"><Run Text="Construir"/><Run Language="es-mx" Text=":"/></TextBlock>
            <Button Style="{StaticResource PrimaryButtonStyle}" FontSize="13" Content="Poblado" Margin="40,50,0,0"  HorizontalAlignment="Left" VerticalAlignment="Top" Height="32" Width="123" Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="2"/>
            <Button Style="{StaticResource PrimaryButtonStyle}" Content="Carretera" Margin="95,50,0,0" FontSize="11" HorizontalAlignment="Left" VerticalAlignment="Top" Height="32" Width="123" Grid.Row="3" Grid.Column="3"/>
            <Button Style="{StaticResource PrimaryButtonStyle}" Content="Ciudad" Margin="10,50,0,0" FontSize="13" HorizontalAlignment="Left" VerticalAlignment="Top" Height="32" Width="123" Grid.Row="3" Grid.Column="4"/>
            <Button Margin="48,577,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" 
                Grid.ColumnSpan="2" Height="122" Width="122" Grid.Row="2"
                    Background="Transparent">
                <Button.Content>
                    <Image Source="pack://application:,,,/Gameplay/Resources/Images/GameResources/Dice.png" Stretch="Uniform" Width="121" />
                </Button.Content>
            </Button>
            <Button Margin="50,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" 
                Grid.ColumnSpan="2" Height="58" Width="112" Grid.Row="3"
                Background="Transparent" >
                <Button.Content>
                    <Image Source="pack://application:,,,/Gameplay/Resources/Images/GameResources/ContinueTurn.png" Stretch="Uniform" Width="112" Height="54" RenderTransformOrigin="0.543,-1.078" />
                </Button.Content>
            </Button>
            <Button Margin="43,495,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" 
            Grid.ColumnSpan="2" Height="63" Width="122" Grid.Row="2"
            Background="Transparent" >
                <Button.Content>
                    <Image Source="pack://application:,,,/Gameplay/Resources/Images/GameResources/TradeButton.png" Stretch="Uniform" Width="122" Height="62" />
                </Button.Content>
            </Button>
            <Rectangle HorizontalAlignment="Left" Height="328" Margin="18,146,0,0" Grid.Row="2" Stroke="Black" VerticalAlignment="Top" Width="188" Grid.ColumnSpan="2"/>
            <TextBlock FontFamily="{StaticResource PrimaryFontFamily}" Grid.Row="2" Grid.Column="1" FontSize="11" HorizontalAlignment="Left" VerticalAlignment="Bottom" Foreground="White" Margin="298,0,0,64"><Run Language="es-mx" Text="x0"/></TextBlock>
            <TextBlock FontFamily="{StaticResource PrimaryFontFamily}" Grid.Row="2" Grid.Column="1" FontSize="11" HorizontalAlignment="Left" VerticalAlignment="Bottom" Foreground="White" Margin="429,0,0,63"><Run Language="es-mx" Text="x0"/></TextBlock>
            <TextBlock FontFamily="{StaticResource PrimaryFontFamily}" Grid.Row="2" Grid.Column="1" FontSize="11" HorizontalAlignment="Left" VerticalAlignment="Bottom" Foreground="White" Margin="601,0,0,59"><Run Language="es-mx" Text="x0"/></TextBlock>
            <TextBlock FontFamily="{StaticResource PrimaryFontFamily}" Grid.Row="2" Grid.Column="1" FontSize="11" HorizontalAlignment="Left" VerticalAlignment="Bottom" Foreground="White" Margin="728,0,0,59"><Run Language="es-mx" Text="x0"/></TextBlock>
            <Image Source="/Gameplay/Resources/Images/GameResources/Town.png" Margin="28,633,151,57" Grid.Column="2" Grid.Row="2" Grid.RowSpan="2" Grid.ColumnSpan="2"/>
            <Image Source="/Gameplay/Resources/Images/GameResources/City.png" Margin="230,630,150,34" Grid.Column="3" Grid.Row="2" Grid.RowSpan="2" Grid.ColumnSpan="2"/>
            <Image Source="/Gameplay/Resources/Images/GameResources/Road.png" Margin="88,645,19,51" Grid.Column="3" Grid.Row="2" Grid.RowSpan="2"/>
        </Grid>
    </Viewbox>
</UserControl>